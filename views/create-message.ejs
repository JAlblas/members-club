<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
   <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <% include partials/header.ejs %>
  <div class="container">
     <form class="form-create-message" action="/create-message" method="post">
       <h2 class="">Create a message</h2>
       <label for="title" class="sr-only">Name</label>
       <input type="text" id="title" name="title" class="form-control"
        placeholder="title" required="">

       <label for="message" class="sr-only">Content</label>
       <input type="textarea" id="message" name="message" class=
         "form-control" placeholder="Your message" required="">

       <button class="btn btn-lg btn-primary btn-block" 
         type="submit">Sign up</button> 
        <br> 
      </form>
    </div>
    <% include partials/footer.ejs %>
  </body>
  </html>