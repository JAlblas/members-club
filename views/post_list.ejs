<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% include partials/header.ejs %>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %>!</p>

    <ul>
        <% post_list.forEach(function(post) { %>
           <li> Title:<%= post.title %> Timestamp:<%= post.timestamp %> Message:<%= post.message %>
            <% if (post.user.member === "Member") {%>
                <b>Posted by: <%= post.user.name %></b>
            <% } %>
           </li>
           <p><form method="POST" action="/message/delete/<%= post._id %>">
            <button type="submit">Delete</button>
            </form></p>
           
        <% }); %> 
    </ul>

    <% include partials/footer.ejs %>
  </body>
</html>
